<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tituloProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo de Proyecto"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="35dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAcronimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acronimo"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tituloProyecto"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAsesorInterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asesor Interno"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtAcronimo"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alumnos"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtAsesorInterno"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            />
    </LinearLayout>




</RelativeLayout>