<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Datos del Asesor Esterno"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:id="@+id/titulo"/>

    <ScrollView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_marginHorizontal="35dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del asesor externo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puesto del asesor externo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area del asesor externo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email del asesor externo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefono del asesor externo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>