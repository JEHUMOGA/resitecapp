<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Alumnos.FragmentDictProyecto"
    >
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Datos de Proyecto"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:id="@+id/titulo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_marginHorizontal="35dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo del proyecto"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAcronimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acronimo del proyecto"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo del proyecto"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRealizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Realizacion del proyecto"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>