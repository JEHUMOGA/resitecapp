<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alumnos.AlumnoDicEmpresa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        </com.google.android.material.appbar.AppBarLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos de la empresa"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="6dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtnombreempresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:textSize="20sp"
                        android:hint="Nombre Empresa o Institucion"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_marginVertical="6dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Giro de la empreza:"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/textlayout1"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtRFCEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:textSize="20sp"
                        android:hint="RFC"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="6dp"
                    android:layout_below="@+id/textlayout2"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtCalleEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:textSize="20sp"
                        android:hint="Calle y NÃºmero"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="6dp"
                    android:layout_below="@+id/textlayout3"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtColoniaEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:textSize="20sp"
                        android:hint="Colonia"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="6dp"
                    android:layout_below="@+id/textlayout4"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtCodigoPEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:textSize="20sp"
                        android:hint="C.P."
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="6dp"
                    android:layout_below="@+id/textlayout5"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtCiudadEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:textSize="20sp"
                        android:hint="Ciudad"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="6dp"
                    android:layout_below="@+id/textlayout6"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtEstadoEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:hint="Estado"
                        android:minHeight="48dp"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="6dp"
                    android:layout_below="@+id/textlayout7"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtTelefonoEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:textSize="20sp"
                        android:hint="Num. Tel."
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="Titular y Encargado de firmar"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout9"
                    app:helperText="@string/tituloUniversitario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="6dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtNombreTitular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:textSize="20sp"
                        android:hint="Nombre Titular de Empresa"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textlayout10"
                    app:helperText="@string/personaQuienFirma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/textlayout1"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPuestoTitular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:textSize="20sp"
                        android:hint="Puesto del titular"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnTerminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@color/succes"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:textSize="20sp"
                    android:text="Terminar"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>